public class P4 {

	public static void main(String[] args) {
		
		int starCount = 1;
		int lines = 5;
		for(int j=1;j<=lines;j++)
		{
			for(int i=1;i<=starCount;i++)
			{
				System.out.print("*");
			}
			System.out.println();
			starCount++;
		}
	}
	
}
